{
  "name": "openrct2-ride-themer",
  "displayName": "Ride Themer",
  "version": "0.1.0",
  "license": "MIT",
  "author": "josefaidt",
  "source": "index.js",
  "main": "dist/ride-themer.js",
  "scripts": {
    "start": "",
    "prestart": "yarn build",
    "postinstall": "node scripts/postinstall.js",
    "dev": "yarn build -- watch",
    "build": "microbundle --format iife --name ride-themer.js --sourcemap false --target node"
  },
  "devDependencies": {
    "@josefaidt/eslint-config": "^0.1.14",
    "@josefaidt/prettier-config": "^0.0.2",
    "eslint": "^7.13.0",
    "got": "^11.8.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "microbundle": "^0.12.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  },
  "eslintConfig": {
    "extends": "@josefaidt/eslint-config",
    "globals": {
      "registerPlugin": false,
      "ui": false,
      "context": false,
      "park": false
    }
  },
  "prettier": "@josefaidt/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,svelte,svx,json,html,css}": [
      "prettier --write"
    ]
  }
}
